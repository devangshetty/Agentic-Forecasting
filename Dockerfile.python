# Dockerfile.python - image for the FastAPI ARIMA service
FROM python:3.11-slim

WORKDIR /app

# System deps for statsmodels & pandas
RUN apt-get update && apt-get install -y build-essential gfortran libatlas-base-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

COPY . /app

EXPOSE 8000

CMD ["uvicorn", "forecast_service:app", "--host", "0.0.0.0", "--port", "8000"]
